<h3>Register</h3>

<%= form_with scope: :user, url: users_path do |f| %>

Email:
<%= f.text_field :email %><br><br>

Password:
<%= f.password_field :password %><br><br>

<%= f.submit "Register" %>

<% end %>

<hr>

<p>
  Already have account?
  <%= link_to "Login here", root_path(form: "login") %>
</p>