<div class="auth-card">

<h3>Sign Up</h3>

<%= form_with scope: :user, url: users_path do |f| %>

<label>Email</label>
<%= f.text_field :email %>

<label>Password</label>
<%= f.password_field :password %>

<%= f.submit "Register", class: "btn btn-success" %>

<% end %>

<p>
Already registered?
<%= link_to "Login", root_path(form: "login") %>
</p>

</div>
