<div class="auth-card">

<h3>Sign Up</h3>

<%= form_with scope: :user, url: users_path, html: { id: "signupForm", novalidate: true } do |f| %>

  <!-- EMAIL -->
  <label>Email</label>
  <%= f.text_field :email, id: "emailField", placeholder: "dev@gmail.com" %>
  <small class="error-message" id="emailError"></small>


  <!-- PASSWORD -->
  <label>Password</label>
  <%= f.password_field :password, id: "passwordField", placeholder: "Dev@12" %>
  <small class="error-message" id="passwordError"></small>

  <p class="password-note">
    Must include 1 uppercase, 1 lowercase, 1 special character,
    1 number, 6-8 characters and no spaces.
  </p>

  <%= f.submit "Register", class: "btn btn-success" %>

<% end %>

<p>
Already registered?
<%= link_to "Login", root_path(form: "login") %>
</p>

</div>
