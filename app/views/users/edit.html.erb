<h2>Update Password</h2>

<%= form_with scope: :user, url: users_path, method: :patch do |f| %>


  New Password:
  <%= f.password_field :password, placeholder: "Dev@123", required: true %><br>
<% if flash[:error].present? %>
  <div class="alert alert-danger">
    <p>Please enter a valid password.</p>
  </div>
<% end %>
<div>
  <ul>
    <li>Password must include 1 uppercase, 1 lowercase, 1 special character, 1 number</li>
    <li>Password has length between 6 to 8 characters</li>
    <li>Password does not contain any spaces</li>
  </ul>
</div>
  <%= f.submit "Update" %>
<% end %>

<br>

<%= button_to "Delete Account", users_path, method: :delete %>
