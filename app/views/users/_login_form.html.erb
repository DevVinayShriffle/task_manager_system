<div class="auth-card">

<h3>Login</h3>

<%= form_with scope: :user, url: login_users_path do |f| %>

<label>Email</label>
<%= f.text_field :email %>

<label>Password</label>
<%= f.password_field :password %>

<%= f.submit "Login", class: "btn btn-primary" %>

<% end %>

<p>
New user?
<%= link_to "Register", root_path %>
</p>

</div>
