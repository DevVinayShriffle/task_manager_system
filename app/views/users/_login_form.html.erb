<div class="auth-card" style="">

  <h3>Login</h3>

  <%= form_with scope: :user,
  url: login_users_path,
  data: {
    controller: "auth",
    action: "submit->auth#validate"
  }, novalidate: true do |f| %>

  <label>Email</label>
  <%= f.text_field :email,
  placeholder: "dev@gmail.com",
  data: { auth_target: "email" }, autofocus:true %>
  <small class="error-message" data-auth-target="emailError"></small>


  <label>Password</label>
  <%= f.password_field :password,
  placeholder: "Dev@12",
  data: { auth_target: "password" } %>
  <small class="error-message" data-auth-target="passwordError"></small>

  <% if flash[:error] %>
  <div>
    <p style="color:#e53e3e;font-size: 12px;"><%= flash[:error] %></p>
  </div>
  <% end %>

  <%= f.submit "Login", class: "btn btn-primary" %>

  <% end %>

  <p>
    New user?
    <%= link_to "Register", root_path %>
  </p>

</div>
