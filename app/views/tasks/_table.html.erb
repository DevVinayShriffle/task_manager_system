


<tbody id="tasks" style="width: 100%;">
  <% if @tasks.present? %>
  <%= turbo_stream_from "job_status_channel" %>
  <%= turbo_frame_tag "tasks_list_frame" do %>
    <%= render @tasks %>
  <% end %>
  <% else %>
  <tr>
    <td colspan="3" style="text-align: center; padding: 20px;">
      No tasks available
    </td>
  </tr>
  <% end %>
</tbody>
