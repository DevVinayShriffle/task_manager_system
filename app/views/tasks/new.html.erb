<%= render "shared/navbar" %>

<div class="center-wrapper">
  <div class="form-card">

    <h3>Create Task</h3>

    <%= form_with model: [:users, @task || Task.new] do |f| %>

      <label>Title</label>
      <%= f.text_field :title, required: true %>

      <label>Description</label>
      <%= f.text_area :descryption %>

      <label>Status</label>
      <%= f.select :status, Task.statuses.keys %>

      <%= f.submit "Create Task", class: "btn btn-success" %>

    <% end %>

  </div>
</div>
