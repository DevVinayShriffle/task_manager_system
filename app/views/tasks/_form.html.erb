<div  id="task_outer_form">
  <div class="form-card" style="margin: auto;">
  

    <%= form_with model: [:users, task || Task.new], data: { turbo_stream: true }, html: { id: "taskForm" } do |f| %>

    <label>Title</label>
    <%= f.text_field :title, placeholder: "Enter title", autofocus: true, id: "titleField" %>
    <p id="titleError" class="field-error"></p>

    <label>Descryption</label>
    <%= f.text_area :descryption, placeholder: "Enter descryption" %>

    <label>Status</label>
    <%= f.select :status, Task.statuses.keys %>

    <%= f.submit "Create Task", class: "btn btn-success" %>

    <% end %>

  </div>  
</div>


