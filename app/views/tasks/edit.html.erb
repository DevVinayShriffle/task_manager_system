<%= render "shared/navbar" %>

<div class="center-wrapper">
  <div class="form-card">

    <h3>Edit Task</h3>

    <%= form_with model: [:users, @task], method: :patch do |f| %>

      <label>Title</label>
      <%= f.text_field :title, required: true %>

      <label>Description</label>
      <%= f.text_area :descryption %>

      <label>Status</label>
      <%= f.select :status, Task.statuses.keys, selected: @task.status %>

      <%= f.submit "Update Task", class: "btn btn-primary" %>

    <% end %>

  </div>
</div>
