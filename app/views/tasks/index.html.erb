<%= render "shared/navbar" %>

<div class="tasks-wrapper">

  <div class="tasks-header">
    <h2>Your Tasks</h2>

    <%= link_to "ï¼‹ Create Task",
          new_users_task_path,
          class: "btn btn-primary small-btn" %>
  </div>

  <div class="tasks-container">

    <% @tasks.each do |task| %>
      <div class="task-row">

        <div class="task-info">
          <div class="task-title"><%= task.title %></div>
          <div class="task-status <%= task.status.downcase %>">
            <%= task.status %>
          </div>
        </div>

        <div class="task-actions">
          <%= link_to "Show",
                users_task_path(task),
                class: "action-link success" %>

          <%= link_to "Edit",
                edit_users_task_path(task),
                class: "action-link primary" %>

          <%= button_to "Delete",
                users_task_path(task),
                method: :delete,
                class: "action-link danger delete-confirm",
                form_class: "inline-form" %>
        </div>

      </div>
    <% end %>

  </div>
</div>
